# NPM performance optimizations
# Disable audit during install for speed
audit=false

# Disable funding messages
fund=false

# Use npm ci when package-lock.json exists for faster installs
# (This is just documentation - developers should use npm ci)

# Enable parallel downloading
maxsockets=10

# Prefer offline packages when available
prefer-offline=true

# Use faster progress display
progress=false

# Reduce network retries
fetch-retry-maxtimeout=20000
fetch-retry-mintimeout=10000

# Optimize registry settings
registry=https://registry.npmjs.org/