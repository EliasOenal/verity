{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "strict": false,
    "esModuleInterop": true,
    "outDir": "./dist",
    "moduleResolution": "Node",
    "lib": ["ES2022", "dom", "dom.iterable"],
    "sourceMap": true,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "declaration": true,
    "declarationDir": "./dist",
    "skipLibCheck": true,
    "noEmit": true,
  },
  "include": [
    "src",
    "test/**/*.ts",
  ],
}
