{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "strict": false,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "lib": ["ES2022", "dom", "dom.iterable"],
    "sourceMap": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
  },
  "include": [
    "./**/*.ts",
    "../test/**/*.ts",
  ],
  "exclude": [
    "webspecific",
    "misc/",
  ],
  "scripts": {
    "pretest": "tsc",
    "test": "jest"
  }
}
